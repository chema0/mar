schema {
    query: Query
}

# The query type, represents all of the entry points into our object graph
type Query {
    model(id: String!): Model
    models(first: Int, type: ModelType): [Model]!
}

type Model {
    id: ID!
    type: ModelType!
    stats: EcoreStats
    metadata: Metadata
    metamodel: EcoreMetamodel
}

#type EcoreInfo {
#    name: String!
#    packages: [String]
#}

# Types of analysisModels
enum ModelType {
    ECORE
    XTEXT
    UML
    BPMN2
    PNML
    SCULPTOR
    RDS
    SIMULINK
    ARCHIMATE
}

# Interface for model stats elements
#interface Stats {
#    totalElements: Int!
